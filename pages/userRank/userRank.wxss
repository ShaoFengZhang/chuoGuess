}

.curtainTop, .curtain {
    width: 750rpx;
    height: 572rpx;
}

.curtainTop {
    position: relative;
    background-color: #ffe0e0;
}

.crownImg {
    width: 88rpx;
    height: 60rpx;
    position: absolute;
    top: -60rpx;
    left: 34rpx;
}

.NO1, .NO2, .NO3 {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #f9c911;
    border-radius: 50%;
    position: absolute;
    bottom: -10rpx;
    left: 52rpx;
}

.NO2 {
    background-color: #bcbcbc;
    left: 32rpx;
}

.NO3 {
    background-color: #ea9a3d;
    left: 32rpx;
}

.NO1Name, .NO2Name, .NO3Name {
    width: 130rpx;
    font-size: 24rpx;
    color: #161616;
    position: absolute;
    text-align: center;
}

.NO1Name {
    top: 373rpx;
    left: 310rpx;
}

.NO2Name {
    top: 400rpx;
    left: 80rpx;
}

.NO3Name {
    top: 400rpx;
    left: 540rpx;
}

.despiteBox {
    width: 650rpx;
    height: 234rpx;
    position: absolute;
    top: 425rpx;
    left: 50rpx;
    font-size: 34rpx;
    text-align: center;
    color: #fff;
    overflow: hidden;
}

.despiteBox image {
    width: 650rpx;
    height: 234rpx;
}

.despiteBox view {
    width: 192rpx;
    position: absolute;
}

.firstScore {
    top: 110rpx;
    left: 230rpx;
}

.secondScore {
    top: 130rpx;
    left: 0rpx;
}

.threeScore {
    top: 150rpx;
    left: 460rpx;
}

.fistUserImg {
    width: 154rpx;
    height: 154rpx;
    box-sizing: border-box;
    border: 4rpx solid rgb(249, 201, 47);
    border-radius: 50%;
}

.secondUserImg, .threeUserImg {
    width: 112rpx;
    height: 112rpx;
    box-sizing: border-box;
    border: 4rpx solid rgb(188, 188, 188);
    border-radius: 50%;
}

.firstUser {
    position: absolute;
    top: 182rpx;
    left: 298rpx;
}

.secondUser {
    position: absolute;
    top: 252rpx;
    left: 90rpx;
}

.threeUser {
    position: absolute;
    top: 252rpx;
    right: 90rpx;
}

.scroolBox {
    width: 100%;
    height: 34vh;
    /* margin-top: 90rpx; */
}

.scroll-view-item, .mydata-item {
    width: 100%;
    height: 140rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid #ebebeb;
    padding: 0 44rpx 0 34rpx;
    line-height: 140rpx;
}

.mydata-item {
    line-height: 120rpx;
    padding: 0 20rpx;
}

.scroll-view-item:last-child {
    border: none;
}

.scroll-view-item image {
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 30rpx;
}

.scroll-view-item text {
    display: inline-block;
}

.ranking {
    width:40rpx;
    color: #7d7d7d;
    font-size: 24rpx;
    margin-right: 40rpx;
}

.rankUserName {
    color: #161616;
    font-size: 28rpx;
}

.rankUserScore {
    float: right;
    color: #161616;
    font-size: 26rpx;
}

.mydataBox {
    width: 702rpx;
    height: 120rpx;
    margin: 0 auto;
    box-sizing: border-box;
    border: 2rpx solid #ebebeb;
    border-radius: 10rpx;
    margin-top: 110rpx;
    box-shadow: 0px 0px 2rpx 1rpx rgba(94, 7, 8, 0.2);
}
